{
    "compilerOptions": {
        "jsx": "react",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types"]
    },
    "exclude": [
      "node_modules",
      "dist",
      "public"
    ]
  }